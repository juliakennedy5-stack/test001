<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Duolingo Clicker</title>
    <style>
        body {
            text-align: center;
            font-family: Arial, sans-serif;
        }
        #owl {
            width: 200px;
            cursor: pointer;
        }
        #counter {
            font-size: 2em;
            margin: 20px;
        }
        .button {
            padding: 10px;
            font-size: 1em;
            margin: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Duolingo Clicker</h1>
    <p>Click the Duolingo owl to earn points!</p>
    <img id="owl" src="https://upload.wikimedia.org/wikipedia/en/6/60/Duolingo_logo.png" alt="Duolingo Owl">
    <p id="counter">0</p>
    <button class="button" id="upgrade">Upgrade (Cost: 10)</button>

    <script>
        let count = 0;
        let upgradeCost = 10;
        let clickValue = 1;

        const owl = document.getElementById("owl");
        const counter = document.getElementById("counter");
        const upgradeButton = document.getElementById("upgrade");

        owl.addEventListener("click", () => {
            count += clickValue;
            counter.textContent = count;
        });

        upgradeButton.addEventListener("click", () => {
            if (count >= upgradeCost) {
                count -= upgradeCost;
                clickValue *= 2;
                upgradeCost *= 2;
                upgradeButton.textContent = `Upgrade (Cost: ${upgradeCost})`;
                counter.textContent = count;
            }
        });
    </script>
</body>
</html>
